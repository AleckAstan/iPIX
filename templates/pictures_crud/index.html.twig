{% extends 'base.html.twig' %}

{% block title %}
  Pictures index
{% endblock %}

{% block body %}
  <div class="form_container">
    <table class="table picture-index">
      <thead>
        <tr>
          <th>
            Name
          </th>
          <th>
            Description
          </th>
          <th>
            Picture
          </th>
        </tr>
      </thead>
      <tbody>
        {% for picture in pictures %}
          <tr>
            <td>
              {{ picture.name }}
            </td>
            <td>
              {{ picture.description }}
            </td>
            <td>
              <img src="data:image/jpg;base64,{{ picture.file }}"
                class="grid-item" />
            </td>
            <td>
              <a href="{{
                path(
                  'pictures_c_r_u_d_show',
                  {
                    id: picture.id
                  }
                )
                }}">
                show
              </a>
              <a href="{{
                path(
                  'pictures_c_r_u_d_edit',
                  {
                    id: picture.id
                  }
                )
                }}">
                edit
              </a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="7">
              no records found
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <a href="{{ path('pictures_c_r_u_d_new') }}">Create new</a>
  </div>
{% endblock %}
