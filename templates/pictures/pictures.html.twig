{% extends 'base.html.twig' %}

{% block title %}
  Pictures
{% endblock %}
    {% block body %}
	
	<section class="imageContainers">

		<div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 0,"fitWidth": "true" }'>
			{% for picture in pictures %}
				<div class="grid-item snip1467">
        <a href="data:image/jpg;base64,{{ picture.file}}"
                    data-gallery="portfolioGallery"
                    class="portfokio-lightbox"
                    title="{{ picture.description }}">
					<img src={{"data:image/jpg;base64,#{ picture.file }"}} class="img-fluid" alt="" width/>
                  </a>
          
					<figcaption>
                  <a href="{{
                    path(
                      'picture_details',
                      {
                        slug: picture.slug
                      }
                    )
                    }}"
                    title="More Details">
                    <i class="bi bi-plus"></i>
                  </a>
        </figcaption>
				</div>
			{% endfor %}
		</div>
	</section>
    {% endblock %}