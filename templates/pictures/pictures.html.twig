{% extends 'base.html.twig' %}

{% block title %}
  Pictures
{% endblock %}
    {% block body %}
	
	<section class="imageContainers">

		<div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 0,"fitWidth": "true" }'>
			{% for picture in pictures %}
				<div class="grid-item snip1467">
        <a href="{{
                    path(
                      'picture_details',
                      {
                        slug: picture.slug
                      }
                    )
                    }}" title="More Details">
					<img src={{"data:image/jpg;base64,#{ picture.file }"}} class="img-fluid" alt="" width/>
                  </a>
          
					<figcaption>
                  <p class="imageP">{{picture.name}}</p>
        </figcaption>
				</div>
			{% endfor %}
		</div>
	</section>
    {% endblock %}