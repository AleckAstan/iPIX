{% extends 'base.html.twig' %}

{% block title %}
  Hello CategoryController!
{% endblock %}

{% block body %}
  <section class="imageContainers category">
    <div class="category_container">
      {% for category in categories %}
        {% set picture = category.pictures %}

        {# {{ dump(picture) }} #}

        <a href="{{
          path(
            'category_pics',
            {
              slug: category.slug
            }
          )
          }}">
          <div class="category_card">
            {% for pic in picture|slice(0, 1) %}
              <img src="data:image/png;base64,{{ pic.file }}"
                alt=""
                class="img-fluid grid-item category_image" />
            {% endfor %}
            <h4 class="category_title">
              {{ category.name }}
            </h4>
          </div>
        </a>
      {% endfor %}
    </div>
  </section>
{% endblock %}
